@model IEnumerable<TireShop>
@{
    ViewData["Title"] = "Tire Shop List";
    var customerId = TempData["id"];
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tire Shop List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TireShop" asp-action="Create" asp-route-customerId="@customerId" class="btn btn-primary">
                Create New Tire Shop
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Customer
                </th>
                <th></th>
                <th>
                    Tires
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.Address
                    </td>
                    <td width="30%">
                        @obj.Customer.LastName @obj.Customer.FirstName
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="TireShop" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="TireShop" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
                    <td>
                        <a asp-controller="Tire" asp-action="Index" asp-route-tireShopId="@obj.Id"
                           class="btn btn-info mx-2">View Tires</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
