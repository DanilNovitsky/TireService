@model TireServiceWeb.Models.Tire

<div class="container p-3">
    <div class="row pb-2">
        <h2 class="text-primary">Tire Details</h2>
        <hr />
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Tire Shop Owner
        </dt>
        <dd class="col-sm-10">
            @Model.TireShop.Customer.LastName @Model.TireShop.Customer.FirstName
        </dd>
        <dt class="col-sm-2">
            Tire Shop
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TireShop.Name)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index" asp-route-tireShopId="@Model.TireShopId" class="btn btn-secondary">Back to List</a>
</div>

