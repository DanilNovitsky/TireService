@model IEnumerable<Tire>
@{
    ViewData["Title"] = "Tire List";
    var tireShopId = TempData["tireShopId"];
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tire List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Tire" asp-action="Create" asp-route-tireShopId="@tireShopId" class="btn btn-primary">
                Create New Tire
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Brand
                </th>
                <th>
                    Model
                </th>
                <th>
                    Size
                </th>
                <th>
                    Quantity
                </th>
                <th></th>
                <th>
                    Details
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">
                        @obj.Brand
                    </td>
                    <td width="30%">
                        @obj.Model
                    </td>
                    <td width="30%">
                        @obj.Size
                    </td>
                    <td width="30%">
                        @obj.Quantity
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Tire" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Tire" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
                    <td>
                        <a asp-controller="Tire" asp-action="Details" asp-route-id="@obj.Id"
                           class="btn btn-info mx-2">Details</a>
                    </td>
                    @* <td>
                        <a asp-controller="Tire" asp-action="Index" asp-route-tireShopId="@obj.Id"
                           class="btn btn-info mx-2">View Tires</a>
                    </td> *@
                </tr>
            }
        </tbody>
    </table>
</div>
