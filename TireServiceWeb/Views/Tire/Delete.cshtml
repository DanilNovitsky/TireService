@model Tire
<form asp-action="Delete" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Tire</h2>
            <hr />
        </div>
        <div class="form-group">
            <label class="form-label mt-4">Are you sure you want to delete this tire?</label>
            <input asp-for="Brand" class="form-control" readonly />
            <input asp-for="Model" class="form-control" readonly />
            <input asp-for="Size" class="form-control" readonly />
            <input asp-for="Quantity" class="form-control" readonly />
            <input type="hidden" asp-for="TireShopId" />
            <input type="hidden" asp-for="Id" />
        </div>
        <br />
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Tire" asp-action="Index" class="btn btn-secondary" style="width:150px">Cancel</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

