@model Tire
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Tires</h2>
            <hr />
        </div>
        <div class="form-group">
            <label asp-for="Brand" class="form-label mt-4">Brand</label>
            <input asp-for="Brand" class="form-control" placeholder="Brand" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Model" class="form-label mt-4">Model</label>
            <input asp-for="Model" class="form-control" placeholder="Model" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Size" class="form-label mt-4">Size</label>
            <input asp-for="Size" class="form-control" placeholder="Size" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="form-label mt-4">Quantity</label>
            <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="TireShopId" />
        <br />
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Tire" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

